      border-bottom: 1px solid #0d305f !important;
      padding: 45px 0 0 0;
      margin-bottom: 0;
      position: relative;
      color: black;
      border: none;
      box-shadow: none;
      width: 100%;
      outline: none;
      font-size: 15px;
    }

    @media screen and (max-width: 1300px) {
      .form-coll {
        width: 29% !important;
      }
    }

    .form-coll {
      display: block;
      position: relative;
      float: left;
      width: 100% !important;
      padding: 1% 0% 3.5%;
      min-height: 1px;
    }

    .submit-btn {
      background: #eeeeee;
      cursor: pointer;
      margin-top: 7.5%;
      width: 50%;
      padding: 4% 0 4% 0;
      border: none;
      font-size: 16px;
    }

    .form-row {
      width: 100%;
      position: relative;
      float: left;
      display: block;
    }

    .form-coll-a {
      text-align: left;
      text-align: left;
      display: block;
      float: left;
      position: relative;
    }

    .form-coll-a a {
      text-decoration: none;
      color: #2d2b2b;
      font-weight: bold;
      letter-spacing: 0.5px;
      border-bottom: 1px solid silver;
      font-size: 12px;
    }

    ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
      font-size: 15px;
      text-align: left;
    }
    .form-coll a{
      position: absolute;
      font-size: 10px;
      left: 0px;
      margin-top: 4px;
      z-index: 999;
      text-decoration: none;
      color: #2d2b2b;
      font-weight: bold;
      border-bottom: 1px solid silver;
    }
    .border-dark{
      border-bottom: 2px solid #464646 !important;
    }
    .border-light{
      border-bottom: 2px solid #bfbcbc !important;
    }

    .prompt{
      font-size: 15px;
    }
    .basic-info {
      font-size: 20px;
      font-weight: unset;
    }
    .padd-nil{
      padding: 0;
    }
  </style>

  <section class="section">
    <article class="article">
      <div class="form-div">
        <h2>ADD A NEW ROLE</h2>
        <h2 class="basic-info">Part 1:Basic Role Information</h2>

        <%= form_tag({:action => :add_new_role_1}, {:method => :post}) %>
        <div class="form-row">
          <div class="form-coll">
            <%= text_field_tag "designation", params['designation'], :placeholder => 'Designation', :class => "txt-field border-ligh", :size => 15 %>
          </div>
          <div class="form-coll">
            <%= select_tag :industry_name, options_for_select(@allInd), :prompt => 'Industry', :class => "txt-field border-light prompt", :required => true %></br>
          </div>
        </div>
        <div class="form-row">
          <div class="form-coll">
            <%= select_tag :function_name, options_for_select(@allFun), :prompt => 'function', :class => "txt-field border-light prompt", :required => true %></br>
          </div>
          <div class="form-coll">
            <%= text_field_tag "dep-sub-fun", params['dep-sub-fun'], :placeholder => 'Department/Sub-Function', :class => "txt-field border-light", :size => 15 %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-coll">

            <%= number_field_tag "min-salary", params['min-salary'], :placeholder => 'Minimum Salary', :class => "txt-field border-ligh", :size => 15 , :required => true%>
          </div>
          <div class="form-coll">

            <%= number_field_tag "max-salary", params['min-salary'], :placeholder => 'Maximum Salary', :class => "txt-field border-ligh", :size => 15 %>
          </div>

        </div>


        <div class="form-row">
          <div class="form-coll">

            <%= select_tag :seniority, options_for_select(['Top','Senior','Middle','Junior']), :prompt => 'Role Seniority', :class => "txt-field border-light prompt", :required => true %>
          </div>




        </div>

        <div class="form-row">
          <div class="form-coll padd-nil">
            <%= submit_tag 'Next', :class => "submit-btn" %>
          </div>
        </div>


      </div>

    </article>
  </section>

