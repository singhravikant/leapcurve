  <section class="section">
    <article class="article">
      <div class="form-div">
        <h2>ADD A NEW ROLE</h2>
        <h2 class="basic-info">Part 3:Candidate Requirements</h2>

        <%= form_tag({:action => :add_newrole_3}, {:method => :post}) %>
        <%= hidden_field_tag('roleid',@roleid) %>

        <div class="form-row">
          <div class="form-coll">

