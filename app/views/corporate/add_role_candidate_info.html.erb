        <div class="form-row">
          <div class="form-coll">
            <%= select_tag :role_degree, options_for_select(@allDeg), :prompt => 'Preferred Degrees', :class => "txt-field border-light prompt", :required => true %></br>
          </div>
          <div class="form-coll-a">
            <%= link_to "ADD MORE" , :class => "add-more-a" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-coll">
            <%= select_tag :role_colleges, options_for_select(@allColl), :prompt => 'Preferred Colleges', :class => "txt-field border-light prompt", :required => true %></br>
          </div>
          <div class="form-coll-a">
            <%= link_to "ADD MORE" , :class => "add-more-a" %>
          </div>
        </div>



        <div class="form-row">
          <div class="form-coll">

            <%= select_tag :role_technical,options_for_select(['Data Analytics','Data Mining','Database Design','Algorithms','Analytical Skills','Big Data','Compiling Statistics']), :prompt => 'Technical Skills', :class => "txt-field border-light prompt", :required => true %>
          </div>
          <div class="form-coll-a">
            <%= link_to "ADD MORE" , :class => "add-more-a" %>
          </div>

        </div>
        <div class="form-row">
